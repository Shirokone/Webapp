extends layout
block content
  div(class='container-fluid')
    div(class='row')
      div(class='col-1 align-self-center')
        a(href='/pug/index' class="btn btn-info") Back
      div(class='col-11')
        p(class='display-3') Hero Details
  form(method='post' action='/pug/heroes/'+hero.id)
    label Name
    br
    input(class='form-control' name='name' type='text' value=hero.name)
    br
    input(type='submit' value='Submit' class="btn btn-primary")
